<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/category_txt"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:fontFamily="@font/encode_sans_semibold"
        android:text="Denim"
        android:textColor="@color/TextColor"
        android:textSize="@dimen/_20sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/viewall_txt"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_30sdp"
        android:text="VIEW ALL"
        android:layout_marginEnd="@dimen/_20sdp"
        android:textSize="@dimen/_11sdp"
        android:gravity="center"
        android:fontFamily="@font/encode_sans_medium"
        app:layout_constraintBottom_toBottomOf="@+id/category_txt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/category_txt" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/newFragRecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/category_txt" />

</androidx.constraintlayout.widget.ConstraintLayout>